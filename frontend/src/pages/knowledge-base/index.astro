---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';

// Mock data until Strapi is connected
const articles = [
  {
    title: "Getting Started with Astro & Strapi",
    slug: "getting-started-astro-strapi",
    excerpt: "Learn how to build a powerful content platform using the modern web stack.",
    category: "Tutorial",
    author: "Admin",
    date: "Jan 28, 2026",
    readingTime: "5 min read"
  },
  {
    title: "Why Content Sovereignty Matters",
    slug: "content-sovereignty",
    excerpt: "Exploring the benefits of Headless CMS and owning your own data distribution.",
    category: "Insights",
    author: "Editor",
    date: "Jan 25, 2026",
    readingTime: "8 min read"
  },
  {
    title: "Advanced GraphQL Queries in Strapi v5",
    slug: "advanced-graphql-strapi-v5",
    excerpt: "Mastering the new filtering and sorting capabilities in the latest Strapi release.",
    category: "Technical",
    author: "Dev Team",
    date: "Jan 20, 2026",
    readingTime: "12 min read"
  }
];

const categories = ["All", "Tutorial", "Insights", "Technical", "Release Notes"];
---

<Layout title="Knowledge Base - TechHub">
    <Header />

    <main class="pt-32 pb-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <header class="mb-16">
            <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Knowledge Base</h1>
            <p class="text-gray-400 text-lg max-w-2xl">
                Browse our library of tutorials, technical articles, and insights to help you build better software.
            </p>
        </header>

        <!-- Search & Filter -->
        <div class="flex flex-col md:flex-row items-center justify-between gap-6 mb-12">
            <div class="flex items-center gap-2 overflow-x-auto pb-2 w-full md:w-auto no-scrollbar">
                {categories.map((cat, i) => (
                    <button class={`px-5 py-2 rounded-full text-sm font-medium transition-all duration-200 whitespace-nowrap ${i === 0 ? 'bg-indigo-600 text-white' : 'bg-white/5 text-gray-400 hover:bg-white/10 hover:text-white border border-white/5'}`}>
                        {cat}
                    </button>
                ))}
            </div>
            
            <div class="relative w-full md:w-80">
                <input 
                    type="text" 
                    placeholder="Search articles..." 
                    class="w-full bg-white/5 border border-white/10 rounded-2xl py-3 px-5 pl-12 text-sm text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500/50 transition-all"
                />
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-gray-500 absolute left-4 top-1/2 -translate-y-1/2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
            </div>
        </div>

        <!-- Articles Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {articles.map(article => (
                <a href={`/knowledge-base/${article.slug}`} class="group">
                    <article class="h-full bg-white/5 border border-white/10 rounded-3xl overflow-hidden hover:border-indigo-500/50 transition-all duration-300 flex flex-col">
                        <div class="aspect-video bg-gradient-to-br from-indigo-900/40 to-violet-900/40 relative overflow-hidden">
                            <div class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-20"></div>
                            <div class="absolute top-4 left-4 px-3 py-1 bg-indigo-600 text-[10px] font-bold uppercase tracking-widest text-white rounded-lg">
                                {article.category}
                            </div>
                        </div>
                        
                        <div class="p-8 flex-1 flex flex-col">
                            <div class="flex items-center gap-3 text-xs text-gray-500 mb-4 font-medium uppercase tracking-widest">
                                <span>{article.date}</span>
                                <span class="w-1 h-1 bg-gray-600 rounded-full"></span>
                                <span>{article.readingTime}</span>
                            </div>
                            
                            <h2 class="text-xl font-bold text-white mb-4 group-hover:text-indigo-400 transition-colors line-clamp-2">
                                {article.title}
                            </h2>
                            
                            <p class="text-gray-400 text-sm leading-relaxed mb-6 line-clamp-3">
                                {article.excerpt}
                            </p>
                            
                            <div class="mt-auto flex items-center justify-between pt-6 border-t border-white/5">
                                <div class="flex items-center gap-3">
                                    <div class="w-8 h-8 rounded-full bg-gradient-to-tr from-indigo-500 to-violet-500"></div>
                                    <span class="text-xs font-semibold text-gray-300">{article.author}</span>
                                </div>
                                <div class="text-indigo-400 group-hover:translate-x-1 transition-transform">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                                    </svg>
                                </div>
                            </div>
                        </div>
                    </article>
                </a>
            ))}
        </div>
    </main>
</Layout>

<style>
    .no-scrollbar::-webkit-scrollbar {
        display: none;
    }
    .no-scrollbar {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }
</style>
