---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';

const docs = [
  {
    title: "Introduction",
    items: [
      { name: "What is TechHub?", href: "/docs/intro" },
      { name: "Getting Started", href: "/docs/getting-started" },
      { name: "System Requirements", href: "/docs/requirements" }
    ]
  },
  {
    title: "Core Concepts",
    items: [
      { name: "Architecture", href: "/docs/architecture" },
      { name: "Data Modeling", href: "/docs/data-modeling" },
      { name: "API Usage", href: "/docs/api-usage" }
    ]
  },
  {
    title: "Deployment",
    items: [
      { name: "CI/CD Pipeline", href: "/docs/cicd" },
      { name: "Vercel + Strapi", href: "/docs/deployment" }
    ]
  }
];
---

<Layout title="Documentation - TechHub">
    <Header />

    <main class="pt-32 pb-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col lg:flex-row gap-12">
            <!-- Sidebar -->
            <aside class="w-full lg:w-64 flex-shrink-0">
                <nav class="sticky top-32 space-y-8">
                    {docs.map(section => (
                        <div>
                            <h3 class="text-xs font-bold uppercase tracking-widest text-indigo-400 mb-4">{section.title}</h3>
                            <ul class="space-y-3">
                                {section.items.map(item => (
                                    <li>
                                        <a href={item.href} class="text-sm text-gray-400 hover:text-white transition-colors">
                                            {item.name}
                                        </a>
                                    </li>
                                ))}
                            </ul>
                        </div>
                    ))}
                </nav>
            </aside>

            <!-- Content Area -->
            <div class="flex-1">
                <header class="mb-12">
                    <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">Documentation</h1>
                    <p class="text-gray-400 text-lg leading-relaxed max-w-2xl">
                        Everything you need to know about building and deploying with TechHub. 
                        Our documentation is designed to get you from absolute beginner to production-ready in no time.
                    </p>
                </header>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {docs.map(section => (
                        <div class="p-8 rounded-3xl bg-white/5 border border-white/10 hover:border-indigo-500/30 transition-all duration-300">
                            <h2 class="text-xl font-bold text-white mb-4">{section.title}</h2>
                            <ul class="space-y-3">
                                {section.items.map(item => (
                                    <li class="flex items-center gap-3">
                                        <div class="w-1.5 h-1.5 rounded-full bg-indigo-500"></div>
                                        <a href={item.href} class="text-gray-400 hover:text-white transition-colors text-sm">
                                            {item.name}
                                        </a>
                                    </li>
                                ))}
                            </ul>
                        </div>
                    ))}
                </div>

                <div class="mt-12 p-8 rounded-3xl bg-indigo-600/10 border border-indigo-500/20">
                    <div class="flex items-start gap-4">
                        <div class="w-10 h-10 rounded-xl bg-indigo-600 flex items-center justify-center flex-shrink-0">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-bold text-white mb-1">Need help?</h3>
                            <p class="text-sm text-gray-400 mb-4">Can't find what you're looking for? Reach out to our maintainers or join the Discord.</p>
                            <a href="#" class="text-sm font-bold text-indigo-400 hover:text-indigo-300 transition-colors">Join Discord &rarr;</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>
